        <menuitem id="menuitem_wechat_en_customer_manage" name="所有客户" parent="menuitem_wechat_en_customer" sequence="20"
                  action="action_wechat_enterprise_customer"/>
        <menuitem id="menuitem_wechat_unassigned_customer_manage" name="未分配客户" parent="menuitem_wechat_en_customer" sequence="30"
                  action="action_wechat_enterprise_customer_unassigned"/>

        <menuitem id="menuitem_wechat_en_user" name="通讯录" parent="menuitem_wechat_enterprise_root" sequence="90"
